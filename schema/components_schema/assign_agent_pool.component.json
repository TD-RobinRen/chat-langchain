{
  "properties": {
    "id": {
      "type": "string",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-f]{32}$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the step."
    },
    "component": {
      "properties": {
        "name": {
          "const": "assign_agent_pool-DnZ3fjDa7E"
        },
        "version": {
          "const": "0.3.x"
        }
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": ["assignment_parameters", "time_limit"],
      "properties": {
        "time_limit": {
          "type": "object",
          "title": "Maximum waiting time",
          "properties": {
            "time_selection": {
              "title": "Select how to set waiting time",
              "oneOf": [
                {
                  "type": "object",
                  "title": "Time in seconds",
                  "required": ["time"],
                  "properties": {
                    "time": {
                      "type": "integer",
                      "title": "Time in seconds",
                      "maximum": 30,
                      "minimum": 1
                    }
                  }
                },
                {
                  "type": "object",
                  "title": "Variable in the flow context",
                  "required": ["time_context_variable"],
                  "properties": {
                    "time_context_variable": {
                      "type": "number",
                      "default": 30
                    }
                  }
                }
              ]
            }
          },
          "description": "Maximum time to find the configured assignment",
          "additionalProperties": false
        },
        "assignment_parameters": {
          "type": "object",
          "required": ["pool_id"],
          "properties": {
            "pool_id": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "title": "Assignment Parameters",
          "description": "Configure the Pool ID that will be used to match a call with an agent"
        }
      },
      "additionalProperties": false
    },
    "exits": {
      "type": "array",
      "description": "Possible exit points or outcomes from this step",
      "items": {
        "type": "object",
        "required": ["name", "_key", "transition"],
        "properties": {
          "_key": {
            "type": "string",
            "description": "A UUID identifying the exit, following the UUID format.",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          "name": {
            "type": "string",
            "description": "Name of the exit."
          },
          "transition": {
            "type": "string",
            "description": "Id of the step to transition to after this exit",
            "pattern": "^[0-9a-f]{32}$"
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time when the step was created"
    }
  }
}
