{
  "properties": {
    "id": {
      "type": "string",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-f]{32}$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the step."
    },
    "component": {
      "properties": {
        "name": {
          "const": "outbound_call-NjI0YzA3MD"
        },
        "version": {
          "const": "0.34.x"
        }
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-06/schema#",
      "required": [
        "display_call_number_settings",
        "destination_number_settings"
      ],
      "properties": {
        "destination_number_settings": {
          "type": "object",
          "title": "Destination number",
          "required": ["destination_number", "ringing_time"],
          "properties": {
            "ringing_time": {
              "type": "integer",
              "title": "Maximum ringing time",
              "default": 15,
              "maximum": 600,
              "minimum": 10
            },
            "destination_number": {
              "type": "string",
              "title": "Destination number variable"
            }
          },
          "description": "Configure the destination number settings",
          "additionalProperties": false
        },
        "display_call_number_settings": {
          "title": "Outbound call number",
          "description": "Select the source phone number to be used in outbound call",
          "oneOf": [
            {
              "type": "object",
              "title": "Talkdesk account number",
              "required": ["outbound_caller_id"],
              "properties": {
                "outbound_caller_id": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "title": "Variable in flow context",
              "required": ["context_outbound_caller_id"],
              "properties": {
                "context_outbound_caller_id": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          ]
        }
      }
    },
    "exits": {
      "type": "array",
      "description": "Possible exit points or outcomes from this step",
      "items": {
        "type": "object",
        "required": ["name", "_key", "transition"],
        "properties": {
          "_key": {
            "type": "string",
            "description": "A UUID identifying the exit, following the UUID format.",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          "name": {
            "type": "string",
            "description": "Name of the exit."
          },
          "transition": {
            "type": "string",
            "description": "Id of the step to transition to after this exit",
            "pattern": "^[0-9a-f]{32}$"
          }
        }
      }
    },
    "context_mappings": {},
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time when the step was created"
    }
  }
}
