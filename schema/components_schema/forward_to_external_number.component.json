{
  "properties": {
    "id": {
      "type": "string",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-f]{32}$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the step."
    },
    "component": {
      "properties": {
        "name": {
          "const": "forward_to_external_number-NWI5ZGVmYT"
        },
        "version": {
          "const": "3.5.x"
        }
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": ["external_number"],
      "properties": {
        "external_number": {
          "type": "object",
          "title": "External number",
          "required": ["forward_address", "ringing_timeout_seconds"],
          "properties": {
            "forward_address": {
              "oneOf": [
                {
                  "type": "object",
                  "title": "Manual configuration...",
                  "required": ["prefix", "number"],
                  "properties": {
                    "number": {
                      "type": "string",
                      "pattern": "^[0-9]{3,15}$"
                    },
                    "prefix": {
                      "type": "string",
                      "default": "+1",
                      "pattern": "^\\+[0-9]{1,4}$"
                    }
                  }
                },
                {
                  "type": "object",
                  "title": "From variable in the flow context...",
                  "required": ["number_from_context"],
                  "properties": {
                    "number_from_context": {
                      "type": "string",
                      "default": ""
                    }
                  },
                  "additionalProperties": false
                }
              ]
            },
            "ringing_timeout_seconds": {
              "type": "integer",
              "title": "Max ringing time in seconds",
              "default": 35,
              "maximum": 600,
              "minimum": 1
            }
          },
          "description": "Configure the external number settings."
        },
        "caller_configuration": {
          "type": "object",
          "title": "Caller configuration",
          "required": ["source_address_type"],
          "properties": {
            "source_address_type": {
              "enum": ["contact", "talkdesk_inbound_number"],
              "type": "string",
              "default": "contact"
            }
          },
          "description": "Configure the details of caller side of the call being forwarded."
        }
      }
    },
    "context_mappings": {
      "type": "object",
      "description": "Mappings of context variables for this step, including interaction_id, request_parameters.",
      "default": {}
    },
    "exits": {
      "type": "array",
      "description": "Possible exit points or outcomes from this step",
      "items": {
        "type": "object",
        "required": ["name", "_key", "transition"],
        "properties": {
          "_key": {
            "type": "string",
            "description": "A UUID identifying the exit, following the UUID format.",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          "name": {
            "type": "string",
            "description": "Name of the exit."
          },
          "transition": {
            "type": "string",
            "description": "Id of the step to transition to after this exit",
            "pattern": "^[0-9a-f]{32}$"
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time when the step was created"
    }
  }
}
