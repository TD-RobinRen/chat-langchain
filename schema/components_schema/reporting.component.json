{
  "properties": {
    "id": {
      "type": "string",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-f]{32}$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the step."
    },
    "component": {
      "properties": {
        "name": {
          "const": "reporting-ZDMxMTBiZD"
        },
        "version": {
          "const": "1.3.x"
        }
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": ["reporting_queue_name"],
      "properties": {
        "reporting_queue_name": {
          "oneOf": [
            {
              "type": "object",
              "title": "List of Ring Groups in your account",
              "required": ["ring_group"],
              "properties": {
                "ring_group": {
                  "type": "string"
                }
              }
            },
            {
              "type": "object",
              "title": "Variables in the flow context",
              "required": ["variable"],
              "properties": {
                "variable": {
                  "type": "string"
                }
              }
            }
          ],
          "title": "Ring group for reporting",
          "description": "Select on which ring group the next assignments will be reported on."
        }
      },
      "additionalProperties": false
    },
    "context_mappings": {
      "type": "object",
      "description": "Mappings of context variables for this step, including interaction_id, request_parameters.",
      "default": {}
    },
    "exits": {
      "type": "array",
      "description": "Possible exit points or outcomes from this step",
      "items": {
        "type": "object",
        "required": ["name", "_key", "transition"],
        "properties": {
          "_key": {
            "type": "string",
            "description": "A UUID identifying the exit, following the UUID format.",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          "name": {
            "type": "string",
            "description": "Name of the exit."
          },
          "transition": {
            "type": "string",
            "description": "Id of the step to transition to after this exit",
            "pattern": "^[0-9a-f]{32}$"
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time when the step was created"
    }
  }
}
