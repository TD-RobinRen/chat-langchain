{
  "properties": {
    "id": {
      "type": "string",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-f]{32}$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the step."
    },
    "component": {
      "properties": {
        "name": {
          "const": "play_audio-NjFkZDU2MG"
        },
        "version": {
          "const": "2.16.x"
        }
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": ["audio_message"],
      "properties": {
        "audio_message": {
          "oneOf": [
            {
              "type": "object",
              "title": "Text to speech",
              "required": ["text", "language"],
              "properties": {
                "text": {
                  "type": "string",
                  "title": "Text to speech",
                  "minLength": 1
                },
                "language": {
                  "enum": [
                    "de-DE",
                    "en-US",
                    "en-GB",
                    "es-ES",
                    "fr-FR",
                    "it-IT",
                    "pt-PT",
                    "pt-BR",
                    "ru-RU",
                    "da-DK",
                    "ca-ES",
                    "nl-NL",
                    "en-AU",
                    "en-CA",
                    "en-IN",
                    "fi-FI",
                    "fr-CA",
                    "ja-JP",
                    "ko-KR",
                    "nb-NO",
                    "pl-PL",
                    "es-MX",
                    "sv-SE",
                    "zh-CN",
                    "zh-HK",
                    "zh-TW",
                    "arb",
                    "de-AT",
                    "en-NZ",
                    "en-ZA",
                    "en-GB-WLS",
                    "hi-IN",
                    "is-IS",
                    "ro-RO",
                    "es-US",
                    "tr-TR",
                    "cy-GB"
                  ],
                  "title": "Language of audio output",
                  "default": "en-US",
                  "description": "(1) Language only available if you have text to Speech powered by Amazon Polly enabled in your account"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "title": "Audio file upload",
              "required": ["talkdesk_resource"],
              "properties": {
                "talkdesk_resource": {
                  "type": "object",
                  "required": ["type", "id"],
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "type": {
                      "enum": ["asset"],
                      "default": "asset"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            {
              "oneOf": [
                {
                  "type": "object",
                  "title": "URL to audio file",
                  "required": ["file_url"],
                  "properties": {
                    "file_url": {
                      "type": "string",
                      "format": "uri",
                      "default": "",
                      "pattern": "http(s)?://.+",
                      "minLength": 5
                    }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "title": "Variable in the flow context",
                  "required": ["file_url_context_variable"],
                  "properties": {
                    "file_url_context_variable": {
                      "type": "string",
                      "default": ""
                    }
                  },
                  "additionalProperties": false
                }
              ],
              "title": "Other sources"
            }
          ],
          "title": "Play audio message",
          "description": "Configure the audio message the user will hear."
        }
      },
      "additionalProperties": false
    },
    "exits": {
      "type": "array",
      "description": "Possible exit points or outcomes from this step",
      "items": {
        "type": "object",
        "required": ["name", "_key", "transition"],
        "properties": {
          "_key": {
            "type": "string",
            "description": "A UUID identifying the exit, following the UUID format.",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          "name": {
            "type": "string",
            "description": "Name of the exit."
          },
          "transition": {
            "type": "string",
            "description": "Id of the step to transition to after this exit",
            "pattern": "^[0-9a-f]{32}$"
          }
        }
      }
    },
    "context_mappings": {},
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time when the step was created"
    }
  }
}
