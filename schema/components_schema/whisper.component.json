{
  "properties": {
    "component": {
      "properties": {
        "name": {
          "const": "whisper-bnfc7Nftys"
        },
        "version": {
          "const": "0.0.x"
        }
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": ["whisper_configurations"],
      "properties": {
        "whisper_configurations": {
          "oneOf": [
            {
              "type": "object",
              "title": "Disabled",
              "properties": {},
              "additionalProperties": false
            },
            {
              "type": "object",
              "$schema": "http://json-schema.org/draft-04/schema#",
              "required": ["audio_message"],
              "properties": {
                "audio_message": {
                  "oneOf": [
                    {
                      "type": "object",
                      "title": "Text to speech",
                      "required": ["text", "language"],
                      "properties": {
                        "text": {
                          "type": "string",
                          "title": "Message to output",
                          "minLength": 1,
                          "maxLength": 75,
                          "pattern": ".*[a-zA-Z0-9].*"
                        },
                        "language": {
                          "enum": [
                            "de-DE",
                            "en-US",
                            "en-GB",
                            "es-ES",
                            "fr-FR",
                            "it-IT",
                            "pt-PT",
                            "pt-BR",
                            "ru-RU",
                            "da-DK",
                            "ca-ES",
                            "nl-NL",
                            "en-AU",
                            "en-CA",
                            "en-IN",
                            "fi-FI",
                            "fr-CA",
                            "ja-JP",
                            "ko-KR",
                            "nb-NO",
                            "pl-PL",
                            "es-MX",
                            "sv-SE",
                            "zh-CN",
                            "zh-HK",
                            "zh-TW"
                          ],
                          "title": "Language of audio output",
                          "default": "en-US"
                        }
                      },
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "title": "Audio file upload",
                      "required": ["talkdesk_resource"],
                      "properties": {
                        "talkdesk_resource": {
                          "type": "object",
                          "required": ["type", "id"],
                          "properties": {
                            "id": {
                              "pattern": "([a-zA-Z0-9\\-]*){1}",
                              "maxLength": 128,
                              "type": "string"
                            },
                            "type": {
                              "enum": ["asset"],
                              "default": "asset"
                            }
                          },
                          "additionalProperties": false
                        }
                      },
                      "additionalProperties": false
                    }
                  ],
                  "title": "Play audio message",
                  "description": "Configure the audio message the agent will hear."
                }
              },
              "title": "Enabled",
              "additionalProperties": false
            }
          ],
          "title": "Whisper message",
          "description": "Set a message to play to agents before they talk with the contact person"
        },
        "additionalProperties": false
      },
      "additionalProperties": false
    }
  }
}
