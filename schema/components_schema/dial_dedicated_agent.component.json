{
  "properties": {
    "id": {
      "type": "string",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-f]{32}$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the step."
    },
    "component": {
      "properties": {
        "name": {
          "const": "dial_dedicated_agent-odQvjBVvex"
        },
        "version": {
          "const": "3.2.x"
        }
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": ["assignment_parameters", "ringing_parameters"],
      "properties": {
        "assignment_parameters": {
          "oneOf": [
            {
              "type": "object",
              "title": "An agent in your account",
              "required": ["agent_id"],
              "properties": {
                "agent_id": {
                  "type": "string",
                  "data_source": "agents"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "title": "Variable in the flow context",
              "required": ["agent_context"],
              "properties": {
                "agent_context": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          ],
          "title": "Assignment Parameters",
          "description": "Select and configure which attributes will be used for matching a call with an agent"
        },
        "ringing_parameters": {
          "type": "object",
          "title": "Maximum ringing time",
          "description": "Maximum time to ring the selected agent",
          "required": ["timeout"],
          "properties": {
            "timeout": {
              "type": "integer",
              "title": "Time in seconds",
              "maximum": 600,
              "minimum": 30
            }
          }
        }
      },
      "additionalProperties": false
    },
    "exits": {
      "type": "array",
      "description": "Possible exit points or outcomes from this step",
      "items": {
        "type": "object",
        "required": ["name", "_key", "transition"],
        "properties": {
          "_key": {
            "type": "string",
            "description": "A UUID identifying the exit, following the UUID format.",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          "name": {
            "type": "string",
            "description": "Name of the exit."
          },
          "transition": {
            "type": "string",
            "description": "Id of the step to transition to after this exit",
            "pattern": "^[0-9a-f]{32}$"
          }
        }
      }
    },
    "context_mappings": {},
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time when the step was created"
    }
  }
}
