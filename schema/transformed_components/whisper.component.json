{
  "title": "Component",
  "type": "object",
  "properties": {
    "id": {
      "title": "Id",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-f]{32}$",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Summarize the step in few words",
      "type": "string"
    },
    "component": {
      "$ref": "#/definitions/ComponentInfo"
    },
    "exits": {
      "title": "Exits",
      "description": "Possible exit points or outcomes from this step",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Exit"
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": [
        "whisper_configurations"
      ],
      "properties": {
        "whisper_configurations": {
          "oneOf": [
            {
              "type": "object",
              "title": "Disabled",
              "properties": {},
              "additionalProperties": false
            },
            {
              "type": "object",
              "$schema": "http://json-schema.org/draft-04/schema#",
              "required": [
                "audio_message"
              ],
              "properties": {
                "audio_message": {
                  "oneOf": [
                    {
                      "type": "object",
                      "title": "Text to speech",
                      "required": [
                        "text",
                        "language"
                      ],
                      "properties": {
                        "text": {
                          "type": "string",
                          "title": "Message to output",
                          "minLength": 1,
                          "maxLength": 75,
                          "pattern": ".*[a-zA-Z0-9].*"
                        },
                        "language": {
                          "enum": [
                            "de-DE",
                            "en-US",
                            "en-GB",
                            "es-ES",
                            "fr-FR",
                            "it-IT",
                            "pt-PT",
                            "pt-BR",
                            "ru-RU",
                            "da-DK",
                            "ca-ES",
                            "nl-NL",
                            "en-AU",
                            "en-CA",
                            "en-IN",
                            "fi-FI",
                            "fr-CA",
                            "ja-JP",
                            "ko-KR",
                            "nb-NO",
                            "pl-PL",
                            "es-MX",
                            "sv-SE",
                            "zh-CN",
                            "zh-HK",
                            "zh-TW"
                          ],
                          "title": "Language of audio output",
                          "default": "en-US"
                        }
                      },
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "title": "Audio file upload",
                      "required": [
                        "talkdesk_resource"
                      ],
                      "properties": {
                        "talkdesk_resource": {
                          "type": "object",
                          "required": [
                            "type",
                            "id"
                          ],
                          "properties": {
                            "id": {
                              "pattern": "([a-zA-Z0-9\\-]*){1}",
                              "maxLength": 128,
                              "type": "string"
                            },
                            "type": {
                              "enum": [
                                "asset"
                              ],
                              "default": "asset"
                            }
                          },
                          "additionalProperties": false
                        }
                      },
                      "additionalProperties": false
                    }
                  ],
                  "title": "Play audio message",
                  "description": "Configure the audio message the agent will hear."
                }
              },
              "title": "Enabled",
              "additionalProperties": false
            }
          ],
          "title": "Whisper message",
          "description": "Set a message to play to agents before they talk with the contact person"
        },
        "additionalProperties": false
      },
      "additionalProperties": false
    },
    "context_mappings": {
      "title": "Context Mappings",
      "description": "Mappings of context variables for this step",
      "type": "object"
    },
    "created_at": {
      "title": "Created At",
      "description": "The date and time when the step was created.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "name",
    "component",
    "exits",
    "properties",
    "context_mappings",
    "created_at"
  ],
  "definitions": {
    "ComponentInfo": {
      "title": "ComponentInfo",
      "type": "object",
      "properties": {
        "name": {
          "const": "whisper-bnfc7Nftys",
          "type": "string"
        },
        "version": {
          "const": "0.0.x",
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "Exit": {
      "title": "Exit",
      "type": "object",
      "anyOf": [
        {
          "title": "Success",
          "description": "If the component succeeds",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
              "type": "string"
            },
            "name": {
              "const": "ok",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-f]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        }
      ]
    }
  }
}