    },
    "created_at": {
      "title": "Created At",
      "description": "The date and time when the step was created.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "name",
    "component",
    "exits",
    "properties",
    "context_mappings",
