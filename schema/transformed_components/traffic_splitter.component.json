{
  "title": "Component",
  "type": "object",
  "properties": {
    "id": {
      "title": "Id",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-f]{32}$",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Summarize the step in few words",
      "type": "string"
    },
    "component": {
      "$ref": "#/definitions/ComponentInfo"
    },
    "exits": {
      "title": "Exits",
      "description": "Possible exit points or outcomes from this step",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Exit"
      }
    },
    "properties": {},
    "context_mappings": {
      "title": "Context Mappings",
      "description": "Mappings of context variables for this step",
      "type": "object"
    },
    "created_at": {
      "title": "Created At",
      "description": "The date and time when the step was created.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "name",
    "component",
    "exits",
    "properties",
    "context_mappings",
    "created_at"
  ],
  "definitions": {
    "ComponentInfo": {
      "title": "ComponentInfo",
      "type": "object",
      "properties": {
        "name": {
          "const": "traffic_splitter-ZjgwOTU1ZG",
          "type": "string"
        },
        "version": {
          "const": "1.3.4",
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "Exit": {
      "title": "Exit",
      "type": "object",
      "anyOf": [
        {
          "title": "Splitting distribution",
          "description": "Traffic splitter enables the flow to distribute the interactions homogeneously according to specified weights.",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
              "type": "string"
            },
            "name": {
              "const": "custom",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-f]{32}$",
              "type": "string"
            },
            "condition": {
              "type": "object",
              "title": "Exit",
              "$schema": "http://json-schema.org/draft-04/schema#",
              "required": [
                "weight"
              ],
              "properties": {
                "weight": {
                  "type": "integer",
                  "title": "Weight ratio",
                  "default": 50,
                  "maximum": 1000000,
                  "minimum": 1
                }
              },
              "additionalProperties": false
            }
          },
          "required": [
            "_key",
            "name",
            "transition",
            "condition"
          ]
        }
      ]
    }
  }
}