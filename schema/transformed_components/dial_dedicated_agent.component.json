{
  "title": "Component",
  "type": "object",
  "properties": {
    "id": {
      "title": "Id",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-z]{32}$",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Summarize what does this component do in few words",
      "type": "string"
    },
    "component": {
      "$ref": "#/definitions/ComponentInfo"
    },
    "exits": {
      "title": "Exits",
      "description": "Possible exit points or outcomes from this step",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Exit"
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": [
        "assignment_parameters",
        "ringing_parameters"
      ],
      "properties": {
        "assignment_parameters": {
          "oneOf": [
            {
              "type": "object",
              "title": "An agent in your account",
              "required": [
                "agent_id"
              ],
              "properties": {
                "agent_id": {
                  "type": "string",
                  "data_source": "agents"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "title": "Variable in the flow context",
              "required": [
                "agent_context"
              ],
              "properties": {
                "agent_context": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          ],
          "title": "Assignment Parameters",
          "description": "Select and configure which attributes will be used for matching a call with an agent"
        },
        "ringing_parameters": {
          "type": "object",
          "title": "Maximum ringing time",
          "description": "Maximum time to ring the selected agent",
          "required": [
            "timeout"
          ],
          "properties": {
            "timeout": {
              "type": "integer",
              "title": "Time in seconds",
              "maximum": 600,
              "minimum": 30
            }
          }
        }
      },
      "additionalProperties": false
    },
    "context_mappings": {
      "title": "Context Mappings",
      "description": "Mappings of context variables for this step",
      "type": "object"
    },
    "created_at": {
      "title": "Created At",
      "description": "The date and time when the step was created.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "name",
    "component",
    "exits",
    "properties",
    "context_mappings",
    "created_at"
  ],
  "definitions": {
    "ComponentInfo": {
      "title": "ComponentInfo",
      "type": "object",
      "properties": {
        "name": {
          "const": "dial_dedicated_agent-odQvjBVvex",
          "type": "string"
        },
        "version": {
          "const": "3.2.x",
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "Exit": {
      "title": "Exit",
      "type": "object",
      "anyOf": [
        {
          "title": "No answer",
          "description": "There was at least one successful dial attempt but no agent was available.",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-zA-Z]{8}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{12}$",
              "type": "string"
            },
            "name": {
              "const": "call_no_answer",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-z]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        },
        {
          "title": "No match",
          "description": "A match could not be found.",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-zA-Z]{8}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{12}$",
              "type": "string"
            },
            "name": {
              "const": "no_match",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-z]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        }
      ]
    }
  }
}