{
  "title": "Component",
  "type": "object",
  "properties": {
    "id": {
      "title": "Id",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-f]{32}$",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Summarize the step in few words",
      "type": "string"
    },
    "component": {
      "$ref": "#/definitions/ComponentInfo"
    },
    "exits": {
      "title": "Exits",
      "description": "Possible exit points or outcomes from this step",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Exit"
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": [
        "language_selection",
        "audio_message",
        "timeout_selection"
      ],
      "properties": {
        "audio_message": {
          "oneOf": [
            {
              "type": "object",
              "title": "Text to speech",
              "required": [
                "text"
              ],
              "properties": {
                "text": {
                  "type": "string",
                  "title": "Message to output",
                  "minLength": 1
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "title": "Audio file upload",
              "required": [
                "talkdesk_resource"
              ],
              "properties": {
                "talkdesk_resource": {
                  "type": "object",
                  "required": [
                    "type",
                    "id"
                  ],
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "type": {
                      "enum": [
                        "asset"
                      ],
                      "default": "asset"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            {
              "oneOf": [
                {
                  "type": "object",
                  "title": "URL to audio file",
                  "required": [
                    "file_url"
                  ],
                  "properties": {
                    "file_url": {
                      "type": "string",
                      "format": "uri",
                      "default": "",
                      "pattern": "http(s)?://.+",
                      "minLength": 5
                    }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "title": "Variable in the flow context",
                  "required": [
                    "file_url_context_variable"
                  ],
                  "properties": {
                    "file_url_context_variable": {
                      "type": "string",
                      "default": ""
                    }
                  },
                  "additionalProperties": false
                }
              ],
              "title": "Other sources"
            }
          ],
          "title": "Play audio message",
          "description": "Configure the audio message the user will hear."
        },
        "timeout_selection": {
          "type": "object",
          "title": "Speech recognition",
          "properties": {
            "speech_timeout": {
              "type": "integer",
              "title": "Recognition timeout in seconds",
              "default": 2,
              "minimum": 1,
              "description": "How long we wait for speech before matching it to a keyword."
            }
          },
          "description": "Settings for speech recognition."
        },
        "language_selection": {
          "type": "object",
          "title": "Language",
          "properties": {
            "language": {
              "enum": [
                "de-DE",
                "en-US",
                "en-GB",
                "es-ES",
                "fr-FR",
                "it-IT",
                "pt-PT",
                "pt-BR",
                "ru-RU",
                "da-DK",
                "ca-ES",
                "nl-NL",
                "en-AU",
                "en-CA",
                "en-IN",
                "fi-FI",
                "fr-CA",
                "ja-JP",
                "ko-KR",
                "nb-NO",
                "pl-PL",
                "es-MX",
                "sv-SE",
                "he-IL",
                "zh-CN",
                "zh-HK",
                "zh-TW",
                "en-NZ",
                "en-ZA",
                "hi-IN",
                "is-IS",
                "ro-RO",
                "es-US",
                "tr-TR"
              ],
              "title": "Language of voice and audio",
              "default": "en-US",
              "description": "(1) Language only available if you have text to Speech powered by Amazon Polly enabled in your account"
            }
          },
          "description": "Configure the language the component will detect and the language of the audio outputs."
        }
      },
      "additionalProperties": false
    },
    "context_mappings": {
      "title": "Context Mappings",
      "description": "Mappings of context variables for this step",
      "type": "object"
    },
    "created_at": {
      "title": "Created At",
      "description": "The date and time when the step was created.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "name",
    "component",
    "exits",
    "properties",
    "context_mappings",
    "created_at"
  ],
  "definitions": {
    "ComponentInfo": {
      "title": "ComponentInfo",
      "type": "object",
      "properties": {
        "name": {
          "const": "voice_ivr-M2JmMTc2YT",
          "type": "string"
        },
        "version": {
          "const": "2.10.x",
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "Exit": {
      "title": "Exit",
      "type": "object",
      "anyOf": [
        {
          "title": "No match",
          "description": "If the voice command doesn't match any keyword.",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
              "type": "string"
            },
            "name": {
              "const": "no_match",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-f]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        },
        {
          "title": "Timeout",
          "description": "If no voice command is detected or the caller doesn't speak until timeout.",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
              "type": "string"
            },
            "name": {
              "const": "timeout",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-f]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        },
        {
          "title": "Voice command exits",
          "description": "Define the voice keyword the caller needs to speak to select that exit.",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-f]{32}$",
              "type": "string"
            },
            "condition": {
              "type": "object",
              "title": "Voice command",
              "$schema": "http://json-schema.org/draft-06/schema#",
              "properties": {
                "routing_conditions": {
                  "type": "object",
                  "title": "Keywords",
                  "required": [
                    "value",
                    "operation"
                  ],
                  "properties": {
                    "value": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [
                          "value",
                          "operation"
                        ],
                        "properties": {
                          "value": {
                            "type": "string"
                          },
                          "operation": {
                            "const": "contains"
                          }
                        }
                      }
                    },
                    "operation": {
                      "const": "any"
                    }
                  }
                }
              }
            }
          },
          "required": [
            "_key",
            "name",
            "transition",
            "condition"
          ]
        }
      ]
    }
  }
}