{
  "title": "Component",
  "type": "object",
  "properties": {
    "id": {
      "title": "Id",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-z]{32}$",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Summarize the step in few words",
      "type": "string"
    },
    "component": {
      "$ref": "#/definitions/ComponentInfo"
    },
    "exits": {
      "title": "Exits",
      "description": "Possible exit points or outcomes from this step",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Exit"
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": [
        "assignment_parameters",
        "time_limit"
      ],
      "properties": {
        "time_limit": {
          "type": "object",
          "title": "Maximum waiting time",
          "properties": {
            "time_selection": {
              "title": "Select how to set waiting time",
              "oneOf": [
                {
                  "type": "object",
                  "title": "Time in seconds",
                  "required": [
                    "time"
                  ],
                  "properties": {
                    "time": {
                      "type": "integer",
                      "title": "Time in seconds",
                      "maximum": 30,
                      "minimum": 1
                    }
                  }
                },
                {
                  "type": "object",
                  "title": "Variable in the flow context",
                  "required": [
                    "time_context_variable"
                  ],
                  "properties": {
                    "time_context_variable": {
                      "type": "number",
                      "default": 30
                    }
                  }
                }
              ]
            }
          },
          "description": "Maximum time to find the configured assignment",
          "additionalProperties": false
        },
        "assignment_parameters": {
          "type": "object",
          "required": [
            "pool_id"
          ],
          "properties": {
            "pool_id": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "title": "Assignment Parameters",
          "description": "Configure the Pool ID that will be used to match a call with an agent"
        }
      },
      "additionalProperties": false
    },
    "context_mappings": {
      "title": "Context Mappings",
      "description": "Mappings of context variables for this step",
      "type": "object"
    },
    "created_at": {
      "title": "Created At",
      "description": "The date and time when the step was created.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "name",
    "component",
    "exits",
    "properties",
    "context_mappings",
    "created_at"
  ],
  "definitions": {
    "ComponentInfo": {
      "title": "ComponentInfo",
      "type": "object",
      "properties": {
        "name": {
          "const": "assign_agent_pool-DnZ3fjDa7E",
          "type": "string"
        },
        "version": {
          "const": "0.3.x",
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "Exit": {
      "title": "Exit",
      "type": "object",
      "anyOf": [
        {
          "title": "No answer",
          "description": "There was at least one successful dial attempt but no agent was available.",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-zA-Z]{8}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{12}$",
              "type": "string"
            },
            "name": {
              "const": "call_no_answer",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-z]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        },
        {
          "title": "Maximum waiting time reached",
          "description": "There was a match but all agents are busy and the configured time out was reached.",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-zA-Z]{8}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{12}$",
              "type": "string"
            },
            "name": {
              "const": "time_limit_reached",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-z]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        },
        {
          "title": "No match found",
          "description": "A match could not be found.",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-zA-Z]{8}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{12}$",
              "type": "string"
            },
            "name": {
              "const": "no_match",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-z]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        }
      ]
    }
  }
}