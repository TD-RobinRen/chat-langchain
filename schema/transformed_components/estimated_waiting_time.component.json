{
  "title": "Component",
  "type": "object",
  "properties": {
    "id": {
      "title": "Id",
      "description": "Generate a unique identifier for the step",
      "pattern": "^[0-9a-z]{32}$",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Summarize what does this component do in few words",
      "type": "string"
    },
    "component": {
      "$ref": "#/definitions/ComponentInfo"
    },
    "exits": {
      "title": "Exits",
      "description": "Possible exit points or outcomes from this step",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Exit"
      }
    },
    "properties": {
      "type": "object",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "required": [
        "estimated_waiting_time_parameters"
      ],
      "properties": {
        "estimated_waiting_time_parameters": {
          "oneOf": [
            {
              "type": "object",
              "title": "List of ring groups in your account",
              "required": [
                "ring_group"
              ],
              "properties": {
                "ring_group": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "title": "Variable in flow context",
              "required": [
                "ring_group_context"
              ],
              "properties": {
                "ring_group_context": {
                  "type": "string",
                  "default": ""
                }
              },
              "additionalProperties": false
            }
          ],
          "title": "Assignment Parameters",
          "description": "Select which attributes will be used for estimated waiting time"
        }
      },
      "additionalProperties": false
    },
    "context_mappings": {
      "title": "Context Mappings",
      "description": "Mappings of context variables for this step",
      "type": "object"
    },
    "created_at": {
      "title": "Created At",
      "description": "The date and time when the step was created.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "name",
    "component",
    "exits",
    "properties",
    "context_mappings",
    "created_at"
  ],
  "definitions": {
    "ComponentInfo": {
      "title": "ComponentInfo",
      "type": "object",
      "properties": {
        "name": {
          "const": "estimated_waiting_time-YTZiMDViNj",
          "type": "string"
        },
        "version": {
          "const": "1.1.x",
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "Exit": {
      "title": "Exit",
      "type": "object",
      "anyOf": [
        {
          "title": "Successful exit",
          "description": "General exit to next step",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-zA-Z]{8}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{12}$",
              "type": "string"
            },
            "name": {
              "const": "ok",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-z]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        },
        {
          "title": "Indeterminate exit",
          "description": "You can define an alternate exit in case of was not possible to calculate the EWT",
          "properties": {
            "_key": {
              "title": " Key",
              "description": "A UUID identifying the exit, following the UUID format.",
              "pattern": "^[0-9a-zA-Z]{8}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{4}-[0-9a-zA-Z]{12}$",
              "type": "string"
            },
            "name": {
              "const": "indeterminate",
              "type": "string"
            },
            "transition": {
              "title": "Transition",
              "description": "Id of the step to transition to after this exit",
              "pattern": "^[0-9a-z]{32}$",
              "type": "string"
            }
          },
          "required": [
            "_key",
            "name",
            "transition"
          ]
        }
      ]
    }
  }
}